@IocBean(fields = { "dao" })
public class SysPartguardDao extends BaseDao<SysPartguard>{
	/**
	 * 功能描述：获取保安炊事员信息列表
	 * 
	 */
	public GridQueryPageResult getPartguardList(String nbjgh, int pageIndex, int pageSize) {
		String sql="select * from EWS.EWS_PARTER_GUARD";
		if (StrUtil.isNotNull(nbjgh)) {
			sql += " where nbjgh like '%" + nbjgh + "%'";
		}
		sql +=" order by nbjgh";
		Pager pager = this.dao().createPager(pageIndex + 1, pageSize);
		GridQueryPageResult PartguardList = new GridQueryPageResult();
		PartguardList.setTotal(super.getListObjectBySql(sql, SysPartguard.class).size());//设置分页所需的最大数
		PartguardList.setData(getListObjectBySql(sql, null, pager, SysPartguard.class));//设置数据
		return PartguardList;
	}

	

}
